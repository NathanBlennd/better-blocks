{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "better-blocks/countdown",
	"version": "0.1.0",
	"title": "Countdown",
	"category": "content",
	"description": "Countdown to a date and time",
	"attributes": {
		"date": {
			"type": "string"		}
	},
	"supports": {
		"align": [ "full", "wide" ],
		"color": {
			"background": true,
			"gradients": false
    	},
		"html": false,
		"spacing": {
			"margin": true
		},
		"typography": {
			"fontSize": true
		}
	},
	"textdomain": "better-blocks",
	"editorScript": "file:./build/index.js",
	"editorStyle": "file:./build/index.css",
	"style": "file:./build/style-index.css"
}
